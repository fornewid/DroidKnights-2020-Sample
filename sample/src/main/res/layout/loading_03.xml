<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="soup.droidknights.animation.loading.Loading01Activity">

    <ProgressBar
        android:id="@+id/progress_view"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/loading_03_background"
        android:indeterminate="false"
        android:max="500"
        android:progressDrawable="@drawable/loading_03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="200" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_android"
        app:layout_constraintBottom_toBottomOf="@id/progress_view"
        app:layout_constraintEnd_toEndOf="@id/progress_view"
        app:layout_constraintStart_toStartOf="@id/progress_view"
        app:layout_constraintTop_toTopOf="@id/progress_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
